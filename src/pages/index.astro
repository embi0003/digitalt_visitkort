---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Digitalt visitkort">
  <main class="bg-yellow-50">
    <section class="flex justify-center py-16">
      <div class="bg-blue-900 p-8 flex flex-col items-center">
        <div class="relative flex flex-col items-center">
          <h1
            class="text-7xl md:text-9xl lg:text-9xl uppercase text-pink-500 text-center"
          >
            Emilie Rose
          </h1>
          <img
            src="public/emilie.webp"
            alt=""
            class="w-40 h-40 md:w-72 md:h-72 lg:w-96 lg:h-96 rounded-full object-cover"
          />
        </div>
      </div>
    </section>

    <section class="flex flex-col items-center py-16">
      <div class="bg-stone-100 bg-noise w-11/12 md:w-3/4 lg:w-2/3 p-8">
        <div class="text-left">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4">
            Fra journalistik til digital design
          </h2>

          <p class="mb-4">
            Mit navn er Emilie Rose Bisgaard. Jeg er uddannet journalist, men
            valgte sidste år at udvide min faglige værktøjskasse og læse videre
            på multimediedesign på EK. Min drøm er, at jeg en dag kan leve af at
            kombinere min nysgerrighed på verden med min glæde for at designe og
            skabe skæve, sjove og kreative digitale løsninger.
          </p>
          <p class="mb-4">
            Som digital designer synes jeg, at det er sjovt at tænke ud af
            boksen og prøve at finde frem til løsninger, der er anderledes og ud
            over det sædvanlige. Samtidigt går jeg efter at skabe løsninger, der
            involverer brugeren og giver dem en god oplevelse.
          </p>
          <p class="mb-4">
            Jeg glæder mig til at udvikle mig endnu mere som digital designer i
            min tid på EK og skabe sjove, kreative og brugervenlige løsninger.
          </p>
        </div>
      </div>

      <div class="grid grid-cols-3 gap-4 w-11/12 md:w-3/4 lg:w-2/3 mt-6">
        <div class="flex justify-start">
          <Button
            href="https://www.instagram.com/emiliers99/"
            target="_blank"
            variant="primary"
            size="large">Instagram</Button
          >
        </div>
        <div class="flex justify-center">
          <Button
            href="https://dk.pinterest.com/emilie199906060/"
            target="_blank"
            variant="primary"
            size="large">Pinterest</Button
          >
        </div>
        <div class="flex justify-end">
          <Button
            href="https://www.linkedin.com/in/emilie-s%C3%B8ndergaard-159994180"
            target="_blank"
            variant="primary"
            size="large">LinkedIn</Button
          >
        </div>
      </div>

      <section
        class="w-11/12 md:w-3/4 lg:w-2/3 mx-auto bg-pink-500 p-8 mt-12 shadow-lg rounded-xl"
      >
        <h2 class="text-2xl font-bold mb-6">Kompetencer</h2>
        <div class="flex flex-col space-y-4 w-full">
          <!-- Adobe -->
          <div class="flex items-center space-x-4 w-full">
            <h3 class="w-40 shrink-0">Adobe-pakken</h3>
            <div class="h-5 bg-yellow-50 rounded-lg flex-1"></div>
          </div>
          <!-- Figma -->
          <div class="flex items-center space-x-4 w-full">
            <h3 class="w-40 shrink-0">Figma</h3>
            <div class="h-5 bg-yellow-50 rounded-lg flex-1"></div>
          </div>
          <!-- Office -->
          <div class="flex items-center space-x-4 w-full">
            <h3 class="w-40 shrink-0">Office-pakken</h3>
            <div class="h-5 bg-yellow-50 rounded-lg flex-1"></div>
          </div>
          <!-- Hindenburg -->
          <div class="flex items-center space-x-4 w-full">
            <h3 class="w-40 shrink-0">Hindenburg</h3>
            <div class="h-5 bg-yellow-50 rounded-lg flex-1"></div>
          </div>
          <!-- VS Code -->
          <div class="flex items-center space-x-4 w-full">
            <h3 class="w-40 shrink-0">VS Code</h3>
            <div class="h-5 bg-yellow-50 rounded-lg flex-1"></div>
          </div>
        </div>
      </section>

      <!-- CV uden boks -->
      <section class="mt-12 w-11/12 md:w-3/4 lg:w-2/3">
        <h2 class="text-xl font-bold mb-6">CV</h2>
        <div class="grid grid-cols-2 gap-y-16">
          <!-- Digitaliseringsstyrelsen -->
          <div class="flex flex-col items-start">
            <p class="text-pink-600 font-bold">NU:</p>
            <h3 class="font-bold">Digitaliseringsstyrelsen</h3>
            <p class="text-sm">Web- og kommunikationsmedhjælper</p>
            <p class="text-sm mb-2">2024-</p>
          </div>
          <div></div>
          <!-- Think PR -->
          <div></div>
          <div class="flex flex-col items-end text-right">
            <h3 class="font-bold">Think PR</h3>
            <p class="text-sm">Journalist og kommunikationsrådgiver</p>
            <p class="text-sm mb-2">2023-2024</p>
          </div>
          <!-- KNR - Nuuk -->
          <div class="flex flex-col items-start">
            <h3 class="font-bold">KNR - Nuuk</h3>
            <p class="text-sm">Journalist</p>
            <p class="text-sm mb-2">2022-2023</p>
          </div>
          <div></div>
          <!-- Femina -->
          <div></div>
          <div class="flex flex-col items-end text-right">
            <h3 class="font-bold">Femina</h3>
            <p class="text-sm">Praktikant og studentermedhjælper</p>
            <p class="text-sm">2020-2022</p>
          </div>
        </div>
        <div class="flex justify-center mt-12">
          <a
            href="/cv.pdf"
            class="bg-pink-500 text-white font-bold px-6 py-3 rounded-lg"
          >
            Se hele mit CV
          </a>
        </div>
      </section>
    </section>
  </main>
</MainLayout>
