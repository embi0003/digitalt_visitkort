---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header x-data="{ showmenu: false }" class="bg-[#fffceb]">
  <div
    id="navbar"
    class="container mx-auto p-4 flex flex-row justify-between items-center border-b border-[#272727]"
  >
    <div id="logo" class="">
      <a
        href="#"
        class="font-display text-3xl uppercase font-jersey text-[#ff0095]"
        >Digitalt visitkort</a
      >
    </div>
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-4">
        <li class="hover:underline hover:text-[#ff0095]">
          <a href="/" class={currentPath === "" ? "font-ibmmono" : ""}
            >Forside</a
          >
        </li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->
        <li class="hover:underline hover:text-[#ff0095]">
          <a
            href="#fra-journalistik"
            class={currentPath === "#fra-journalistik"
              ? "font-bold"
              : "font-ibmmono"}>Om mig</a
          >
        </li>

        <li class="hover:underline hover:text-[#ff0095]">
          <a
            href="#kompetencer"
            class={currentPath === "#kompetencer"
              ? "font-bold"
              : "font-ibmmono"}>Kompetencer</a
          >
        </li>
        <li class="hover:underline hover:text-[#ff0095]">
          <a
            href="#cv"
            class={currentPath === "#cv" ? "font-bold" : "font-ibmmono"}>CV</a
          >
        </li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 cursor-pointer"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <nav
    id="mobilmenu"
    class="flex flex-col content-center"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul class="border-t-2 border-b-2 border-black">
      <li class="text-center py-2 hover:underline hover:text-[#ff0095]">
        <a href="/" class={currentPath === "" ? "" : "font-ibmmono"}>Forside</a>
      </li>
      <li class="text-center py-2 hover:underline hover:text-[#ff0095]">
        <a
          href="#fra-journalistik"
          class={currentPath === "#fra-journalistik" ? "font-bold" : ""}
          >Om mig</a
        >
      </li>
      <li class="text-center py-2 hover:underline hover:text-[#ff0095]">
        <a
          href="#kompetencer"
          class={currentPath === "#kompetencer" ? "font-bold" : ""}
          >Kompetencer</a
        >
      </li>
      <li class="text-center py-2 hover:underline hover:text-[#ff0095]">
        <a href="#cv" class={currentPath === "#cv" ? "font-bold" : ""}>CV</a>
      </li>
    </ul>
  </nav>
</header>
